h1 Edit user 
input(type='text',name='firstName',ng-model='editCtrl.user.firstName')
input(type='text',name='lastName',ng-model='editCtrl.user.lastName')
input(type='text',name='email',ng-model='editCtrl.user.email')
input(type='tel',name='mobile',ng-model='editCtrl.user.mobile')

button(class='btn btn-info' ng-click='editCtrl.update()') Update
